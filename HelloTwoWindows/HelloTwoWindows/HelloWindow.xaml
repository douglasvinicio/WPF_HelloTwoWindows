<Window x:Class="HelloTwoWindows.HelloWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloTwoWindows"
        mc:Ignorable="d"
        Title="HelloWindow" Height="300" Width="400">
    <Grid>
        <Label Name="lblMessage" Content="Label" HorizontalAlignment="Left" Margin="50,44,0,0" VerticalAlignment="Top"/>
        <Label Content="What is your age?" HorizontalAlignment="Left" Margin="46,86,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtAge" HorizontalAlignment="Left" Height="23" Margin="195,90,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Click="btnOk_Click" x:Name="btnOk" Content="Ok" HorizontalAlignment="Left" Margin="114,190,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Click="btnCancel_Click" x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="229,190,0,0" VerticalAlignment="Top" Width="75"/>
        <Label Content="Where do you live?" HorizontalAlignment="Left" Margin="46,115,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtCity" HorizontalAlignment="Left" Height="23" Margin="195,119,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
